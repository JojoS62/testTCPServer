{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation":"absolute",
        "pattern": {
            "regexp": "\\[(Warning|Error)\\] (.*):(\\d+):(\\d+):(.*)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4,
            "message": 5
        }
    },
    "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
    },
    "tasks": [
        {
            "label": "compile release",
            "group": "build",
            "command": "mbed",
            "args": [
                "compile",
                "--build",
                "../../BUILD/${workspaceFolderBasename}/Release",
                "--source",
                ".",
                "--source",
                "../../mbed-os",
                "--source",
                "../../libs",
                "--source",
                "../../drivers",
                "--source",
                "../../custom_targets",
                "--source",
                "../../components",
                "--profile",
                "release"
            ]
        },
        {
            "label": "compile debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "mbed",
            "args": [
                "compile",
                "--build",
                "../../BUILD/${workspaceFolderBasename}/Debug",
                "--source",
                ".",
                "--source",
                "../../mbed-os",
                "--source",
                "../../libs",
                "--source",
                "../../drivers",
                "--source",
                "../../custom_targets",
                "--source",
                "../../components",
                "--profile",
                "debug"
            ]
        },
        {
            "label": "compile develop",
            "group": "build",
            "command": "mbed",
            "args": [
                "compile",
                "--build",
                "../../BUILD/${workspaceFolderBasename}/Develop",
                "--source",
                ".",
                "--source",
                "../../mbed-os",
                "--source",
                "../../libs",
                "--source",
                "../../drivers",
                "--source",
                "../../custom_targets",
                "--source",
                "../../components",
                "--profile",
                "develop"
            ]
        },
        {
            "label": "export VSCode",
            "group": "build",
            "command": "mbed",
            "args": [
                "export",
                "-i",
                "vscode_gcc_arm",
                "--source",
                ".",
                "--source",
                "../../mbed-os",
                "--source",
                "../../libs",
                "--source",
                "../../drivers",
                "--source",
                "../../custom_targets",
                "--source",
                "../../components",
                "--profile",
                "debug"
            ]
        },
        {
            "label": "show targets",
            "group": "none",
            "command": "mbed",
            "args": [
                "compile",
                "-S",
                "--source",
                ".",
                "--source",
                "../../mbed-os"
            ]
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo \n\rworksspaceFolder: ${workspaceFolder}\n\rworkspaceFolderBasename: ${workspaceFolderBasename}"
        }
    ]
}